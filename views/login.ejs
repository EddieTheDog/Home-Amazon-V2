<% layout('layout', { title: 'Login', user: null }) %>

<div class="bg-white p-6 rounded shadow max-w-md">
  <h2 class="text-xl font-bold">Login for <%= role || 'role' %></h2>
  <% if (message) { %>
    <div class="text-red-600 mt-2"><%= message %></div>
  <% } %>
  <form method="post" class="mt-4">
    <input type="hidden" name="role" value="<%= role %>" />
    <div>
      <label class="block text-sm">Password</label>
      <input name="password" type="password" class="mt-1 block w-full border p-2 rounded" required />
    </div>
    <div class="mt-4">
      <button class="px-4 py-2 bg-blue-600 text-white rounded">Login</button>
    </div>
  </form>
</div>
